   <!-- button to toggle gyro -->
    <layer name="gyro_btn" type="text"
           html="Enable Gyro"
           align="rightbottom" x="10" y="10"
           width="120" height="40"
           bgcolor="0x007A33" bgalpha="0.8"
           css="color:#fff; text-align:center; line-height:40px; border-radius:6px;"
           onclick="toggle_gyro();"
           />

    <!-- action to toggle -->
    <action name="toggle_gyro">
        if(plugin[gyro2].enabled,
            set(plugin[gyro2].enabled, false);
            set(layer[gyro_btn].html, 'Enable Gyro');
          ,
            set(plugin[gyro2].enabled, true);
            set(layer[gyro_btn].html, 'Disable Gyro');
        );
    </action>

	  <!-- auto-enable gyro on mobile -->
    <action name="startup" autorun="onstart">
        if(device.mobile, delayedcall(0.5, set(plugin[gyro2].enabled,true); set(layer[gyro_btn].html,'Disable Gyro');));
    </action>

